{
  "title": "SocialPublisherSkillSchema",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "properties": {
        "agent_id": { "type": "string" },
        "platform": {
          "type": "string",
          "enum": ["twitter", "instagram", "threads", "tiktok"]
        },
        "text_content": { "type": "string" },
        "media_urls": {
          "type": "array",
          "items": { "type": "string" }
        },
        "disclosure_level": {
          "type": "string",
          "enum": ["automated", "assisted", "none"]
        }
      },
      "required": ["agent_id", "platform", "text_content"]
    },
    "output": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "data": {
          "type": ["object", "null"],
          "properties": {
            "post_id": { "type": ["string", "null"] }
          }
        },
        "error": {
          "type": ["object", "null"],
          "properties": {
            "code": { "type": "string" },
            "message": { "type": "string" }
          }
        }
      },
      "required": ["success", "data", "error"]
    }
  },
  "required": ["input", "output"]
}
